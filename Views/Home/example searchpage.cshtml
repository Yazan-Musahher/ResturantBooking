@model TModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<style>
    div.container {
       width: 100%;
           min-height: 100vh;
           padding: 5%;
           background-image: linear-gradient(rgba(0,8,51,0.9), rgba(0,8,51,0.9)), url("images/food.jpg");
           background-position: center;
           background-size: cover;
           display: flex;
           align-items: center;
           justify-content: center;
    }
    div.search-bar
    {
     width: 100%;
     max-width: 500px;
     background-color: rgba(255,255,255,0.2);
     display: flex;
     align-items: center;
     float: left;
     border-radius: 60px;
     padding: 10px 20px;
     backdrop-filter: blur(4px) saturate(180%);
    }
    div.search-bar input
    {
     background: transparent;
        flex: 1;
        border: 0;
        outline: black;
        padding: 24px 20px;
        font-size: 20px;
        color: #cac7ff;
    }
    ::placeholder
    {
     color: #cac7ff;
    }
    div.search-bar img
    {
        width: 25px;
        flaot: right;
        
    }
    div.search-bar img
    {
    border:0; 
    width: 60px;
    height: 60px;
    border-radius: 1%;
    background: #58629b;
    cursor: pointer;
    }
    div.Header
    {
    font-size: 50px;
    color: #fff;
    text-align: center;
    }
    div.quote
    {
        font-size: 50px;
            font-weight: 700;
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
    }
</style>
<head>
    <meta name="viewport" content="width= device-width, initital-scale =1.0">
    <title>Test</title>
    //<link rel="stylesheet" href="style.css">
</head>

<body>
<div class="Header">
    <h1>Restaurant booker</h1>
</div>
<div class="container">
    <div class="search-bar">
        <from action="" method="get">
            <input type="text" placeholder="Search for city" name="q">
            <button type="submit"><img src="images/search1.png"></button>
        </from>
    </div>
</div>
<div class="quote">
    <h1>The best restaurantes in nearby</h1>
</div>
</body>
</html>