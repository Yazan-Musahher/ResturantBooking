@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/registerLogin.css" asp-append-version="true"/>

<div class="header center">
   <h1>@ViewData["Title"]</h1> 
</div>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="inputForms font">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="inputForms font">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true"/>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="inputForms font">  
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="inputForms font">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div  class="inputForms font">
         <button id="registerSubmit" type="submit" class="button">Register</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
